	<start name="c19"> <binary name="timer"/> <resource name="RAM" quantum="1M"/> <provides><service name="Timer"/></provides> </start>
</config>
}

# Build boot files from source binaries
build_boot_image { core init timer test-timer }

# Configure Qemu
append qemu_args " -m 64 -nographic"

# Execute test in Qemu
run_genode_until forever
